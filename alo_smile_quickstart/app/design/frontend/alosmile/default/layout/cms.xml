<layout version="0.1.0">
<!--
Default layout, loads most of the pages
-->

    <default>
        <reference name="footer">
            <block type="cms/block" name="cms_footer_links" before="footer_links">
                <!--
                    The content of this block is taken from the database by its block_id.
                    You can manage it in admin CMS -> Static Blocks
                -->
                <action method="setBlockId"><block_id>footer_links</block_id></action>
            </block>
           <!--  <block type="cms/block" name="brands" as="brands">
                <action method="setBlockId"><block_id>brands</block_id></action>
            </block> -->
            <block type="cms/block" name="block_footer_top" as="block_footer_top">
                <action method="setBlockId"><block_id>block_footer_top</block_id></action>
            </block>
            <block type="cms/block" name="block_footer_bottom" as="block_footer_bottom">
                <action method="setBlockId"><block_id>block_footer_bottom</block_id></action>
            </block>
        </reference>

		 <!-- <reference name="left">
            <block type="page/html" after="-" name="left.block" template="magiccart/alothemes/block/block_left.phtml"/>
        </reference>
		<reference name="right">
            <block type="page/html" after="-" name="right.block" template="magiccart/alothemes/block/block_right.phtml"/>
        </reference> -->
    </default>
    
    <cms_page translate="label">
        <label>CMS Pages (All)</label>
        <reference name="content">
            <block type="core/template" name="page_content_heading" template="cms/content_heading.phtml"/>
            <block type="page/html_wrapper" name="cms.wrapper" translate="label">
                <label>CMS Content Wrapper</label>
                <action method="setElementClass"><value>std</value></action>
                <block type="cms/page" name="cms_page"/>
            </block>
        </reference>
    </cms_page>

    <cms_menu>
        <reference name="left_first">
            <block type="cms/block" name="cms_menu" >
                <action method="setBlockId"><block_id>cms_menu</block_id></action>
            </block>
        </reference>
    </cms_menu>

    <cms_index_index translate="label">
        <label>CMS Home Page</label>
	
		 <reference name="slide-home">
			<block type="cms/block" name="slide">
			  <action method="setBlockId"><block_id>slide</block_id></action>
			</block>
		 </reference>

        <reference name="block_static">
            <block type="cms/block" name="static_01">
              <action method="setBlockId"><block_id>static_01</block_id></action>
            </block>
         </reference>

         <reference name="block_deal">
            <block type="cms/block" name="deal">
              <action method="setBlockId"><block_id>deal</block_id></action>
            </block>
         </reference>
		
		<reference name="block_policy">
			<block type="cms/block" name="policy">
			  <action method="setBlockId"><block_id>policy</block_id></action>
			</block>
        </reference>
		
		 <reference name="blog">
			<block type="cms/block" name="alo-blog">
			  <action method="setBlockId"><block_id>alo-blog</block_id></action>
			</block>
		 </reference>
		 
		<reference name="home-shop">
			<block type="cms/block" name="home-shop-products">
			  <action method="setBlockId"><block_id>home-shop-products</block_id></action>
			</block>
        </reference>
		
		<reference name="products_category">
			<block type="cms/block" name="ourproducts_category">
			  <action method="setBlockId"><block_id>ourproducts_category</block_id></action>
			</block>
        </reference>
		
		<reference name="block-testimonials">
			<block type="cms/block" name="testimonials">
			  <action method="setBlockId"><block_id>testimonials</block_id></action>
			</block>
		 </reference>
		
		<reference name="latest_products">
			<block type="cms/block" name="home-latest-products">
			  <action method="setBlockId"><block_id>home-latest-products</block_id></action>
			</block>
        </reference>
		
		<reference name="block-brands">
			<block type="cms/block" name="brands">
			  <action method="setBlockId"><block_id>brands</block_id></action>
			</block>
		 </reference>

         <reference name="block-primary">
            <block type="cms/block" name="primary">
              <action method="setBlockId"><block_id>primary</block_id></action>
            </block>
         </reference>
		
		<reference name="block_bottom">
			<block type="cms/block" name="block_bottom-products">
			  <action method="setBlockId"><block_id>block_bottom-products</block_id></action>
			</block>
        </reference>
		
		<reference name="left-top">
			<block type="cms/block" name="bestsellers">
			  <action method="setBlockId"><block_id>bestsellers</block_id></action>
			</block>
			<block type="cms/block" name="special">
			  <action method="setBlockId"><block_id>special</block_id></action>
			</block>
		</reference>
		 
    </cms_index_index>

    <cms_index_defaultindex>
        <remove name="right"/>
        <remove name="left"/>

        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="core/template" name="default_home_page" template="cms/default/home.phtml"/>
        </reference>
    </cms_index_defaultindex>

    <cms_index_noroute translate="label">
        <label>CMS No-Route Page</label>
    </cms_index_noroute>

    <cms_index_defaultnoroute>
        <remove name="right"/>
        <remove name="left"/>
        
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="core/template" name="default_no_route" template="cms/default/no-route.phtml"/>
        </reference>
    </cms_index_defaultnoroute>

</layout>
